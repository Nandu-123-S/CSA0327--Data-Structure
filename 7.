#include <stdio.h>

int main() {
    int a[100], n, i, pos, val, choice;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter elements: ");
    for(i=0; i<n; i++)
        scanf("%d", &a[i]);

    printf("1.Insert  2.Delete  3.Display\n");
    scanf("%d", &choice);

    // INSERT
    if(choice == 1) {
        printf("Enter position and value: ");
        scanf("%d %d", &pos, &val);
        for(i=n; i>=pos; i--)
            a[i] = a[i-1];
        a[pos-1] = val;
        n++;
    }

    // DELETE
    else if(choice == 2) {
        printf("Enter position to delete: ");
        scanf("%d", &pos);
        for(i=pos-1; i<n-1; i++)
            a[i] = a[i+1];
        n--;
    }

    // DISPLAY
    printf("Array: ");
    for(i=0; i<n; i++)
        printf("%d ", a[i]);

    return 0;
}
